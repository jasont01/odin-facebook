<!DOCTYPE html>
<html>
  <head>
    <title>Fauxbook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/22f61d7fe5.js" crossorigin="anonymous"></script>
  </head>

  <body>

    <div class="page-container">
      <div class="content-wrap">
        <!-- navbar -->
        <nav class="navbar navbar-expand-md navbar-dark bg-dark justify-content-between mb-4">
          
          <span class="navbar-brand">
            <%= link_to "Fauxbook", :root, class: "navbar-brand" %>
          </span>

          <span class="mr-5">
            <!--Notifications-->
            <!-- if notifications.empty? -->
            <button class="btn btn-secondary btn-sm mr-2 disabled">
              <i class="far fa-bell"></i>
            </button>
            <!-- else -->
            <button class="btn btn-primary btn-sm mr-2">
              <i class="far fa-bell"></i>
            </button>

            <!--Session Buttons-->
            <% if user_signed_in? %>
              <%= link_to "Home", root_path, class: "btn btn-primary mr-2 btn-sm" %>
              <%= link_to current_user.name, user_path(current_user), class: "btn btn-primary mr-2 btn-sm" %>
              <%= link_to "Logout", destroy_user_session_path,method: :delete, class: "btn btn-secondary btn-sm" %>
            <% else %>
              <%= link_to "Signin with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-primary mr-2" %>
              <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary mr-2" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %>
            <% end %>
          </span>

        </nav>
        <!-- end navbar -->

        <div class="container-fluid">
          <div class="row d-flex justify-content-center">
            <div class="col-8">
              <!-- alerts -->
              <% if flash[:notice] %>
                <div class="alert alert-success">
                  <%= notice %>
                </div>
              <% end %>
              <% if flash[:alert] %>
                <div class="alert alert-warning">
                  <%= alert %>
                </div>
              <% end %>
              <!-- end alerts -->
            </div>
          </div>

          <%= yield %>

        </div>

      </div>

      <footer class="text-center">
        <small class="d-block mb-3 text-muted font-weight-bold">Â© 2020 Fauxbook. All rights reserved.</small>
      </footer>

    </div>

  </body>
</html>
