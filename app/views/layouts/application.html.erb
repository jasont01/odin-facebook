<!DOCTYPE html>
<html>
  <head>
    <title>Fauxbook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/22f61d7fe5.js" crossorigin="anonymous"></script>
  </head>

  <body>

    <!-- navbar -->
    <!--TODO 6. The Friend Request shows up in the notifications section of a Userâ€™s navbar.-->
    <nav class="navbar navbar-expand-md navbar-dark bg-dark justify-content-between mb-4">
      
      <span class="navbar-brand">
        <%= link_to "Fauxbook", :root, class: "navbar-brand" %>
      </span>

      <span class="mr-5">
        <% if user_signed_in? %>
          <%= link_to "Home", root_path, class: "btn btn-primary mr-2 btn-sm" %>
          <%= link_to current_user.name, user_path(current_user), class: "btn btn-primary mr-2 btn-sm" %>
          <%= link_to "Logout", destroy_user_session_path,method: :delete, class: "btn btn-secondary btn-sm" %>
        <% else %>
          <%= link_to "Signin with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-primary mr-2" %>
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary mr-2" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %>
        <% end %>
      </span>

    </nav>
    <!-- end navbar -->

    <div class="container">

      <!-- alerts -->
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <%= notice %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-warning">
          <%= alert %>
        </div>
      <% end %>
      <!-- end alerts -->

      <%= yield %>

    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>
