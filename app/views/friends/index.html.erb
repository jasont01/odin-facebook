<div class="row d-flex justify-content-center pt-5">

  <div class="col-2">

    <%= render partial: 'shared/sidebar_menu', locals: { page: 'friends' } %>
    
  </div>

  <div class="col-4 mb-5">

    <div class="card">
      <div class="card-body">

        <% @friends.each do |friend| %>
          <div class="row p-2">

            <div class="col-2">
              <%= render partial: 'shared/profile_image', object: friend, as: 'user' %>
            </div>

            <div class="col">
              <%= link_to friend.name, user_path(friend) %>
            </div>

          </div>
        <% end %>

      </div>
    </div>

  </div>

  <div class="col-3"></div>

</div>