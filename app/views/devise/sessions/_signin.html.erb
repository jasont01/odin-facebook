<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= f.email_field :email, autocomplete: "email", class: 'mx-1', value: 'demo@email.com' %>
  <%= f.password_field :password,  autocomplete: "current-password", class: 'mx-1', value: 'password' %>

  <% if devise_mapping.rememberable? %>
  
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'form-check-label mx-1' %>
   
  <% end %>

  <%= f.submit "Login", autofocus: true, class: "btn btn-secondary btn-sm mx-1" %>

<% end %>